{
    "compilerOptions" : {

        "allowImportingTsExtensions" : true ,
        "experimentalDecorators" : true ,
        "downlevelIteration" : true ,
        "resolveJsonModule" : true ,
        "strictNullChecks" : true ,
        "esModuleInterop" : true ,
        "declarationMap" : true ,
        "noImplicitThis" : true ,
        "noEmitOnError" : false ,
        "importHelpers" : true ,
        "noImplicitAny" : true ,
        "skipLibCheck" : true ,
        "declaration": true ,
        "sourceMap" : true ,
        "composite" : true ,
        "pretty" : true ,
        "noEmit" : true ,

        "moduleResolution" : "NodeNext" ,
        "baseUrl" : "Source" ,
        "rootDir" : "." ,
        "module" : "NodeNext" ,
        "target" : "ES2020" ,
        "outDir" : "Build" ,

        "typeRoots" : [ "node_modules/@types" ] ,
        "types" : [] ,
        "lib" : [ "ES2023" , "DOM" ]
    },

    "include" : [
        "Source/**/*.d.ts" ,
        "Source/**/*.ts"
    ]
}